<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />



    <Button
        android:id="@+id/stopServiceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Experiment"
        android:layout_column="3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

    </Button>

    <Button android:id="@+id/startServiceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Experiemnt"
        android:layout_weight="1.38"
        android:layout_marginBottom="116dp"
        android:layout_above="@+id/stopServiceId"
        android:layout_centerHorizontal="true">
    </Button>

    <Button android:id="@+id/startLogcatId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart Phone"
        android:layout_weight="1.38"
        android:layout_below="@+id/startServiceId"
        android:layout_alignEnd="@+id/textView">
    </Button>

</RelativeLayout>
